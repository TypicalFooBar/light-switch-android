<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">

    <TextView
        android:layout_marginLeft="@dimen/depth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Light Switch Names"
        android:textColor="@color/text" />

    <View
        android:layout_marginLeft="@dimen/depth1"
        android:layout_marginRight="@dimen/depth1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lightSwitchNamesLinearLayout"
        android:layout_marginLeft="@dimen/depth2"
        android:layout_marginRight="@dimen/depth2"/>

</LinearLayout>